<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="72dp"
            android:layout_marginLeft="88dp" android:layout_marginStart="88dp"/>
    <Button
            android:text="Nova Frase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="gerarFrases"/>
    <TextView
            android:text="Pressione o botÃ£o para gerar uma frase"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:id="@+id/textoFrase"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="79dp"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp" android:textAllCaps="false" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="287dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>